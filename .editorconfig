# http://editorconfig.org
root = true

[*]
charset = utf-8

# 定义换行符，支持lf、cr和crlf
end_of_line = lf

# 规定每级缩进的列数和soft-tabs的宽度
indent_size = 2

# tab为hard-tabs，space为soft-tabs。
indent_style = space

# true表明使文件以一个空白行结尾，false反之
insert_final_newline = true
max_line_length = 80

# true表示会除去换行行首的任意空白字符，false反之。
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
